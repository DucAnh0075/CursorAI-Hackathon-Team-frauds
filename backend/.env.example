# Environment variables
# Copy this file to .env and fill in your values

# ===========================================
# API Keys
# ===========================================

# Manus AI API Key (Primary chat AI)
# Get your API key from: https://manus.ai
MANUS_API_KEY=your_manus_api_key_here

# OpenAI API Key (Fallback chat AI - optional)
OPENAI_API_KEY=

# MiniMax API Key (Video generation)
# Get your API key from: https://minimax.chat
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_GROUP_ID=your_minimax_group_id_here

# ===========================================
# Manus AI Settings
# ===========================================
MANUS_API_BASE_URL=https://api.manus.ai/v1
MANUS_MODEL=manus-1

# ===========================================
# MiniMax Video Settings
# ===========================================
MINIMAX_API_BASE_URL=https://api.minimax.chat/v1
MINIMAX_VIDEO_MODEL=video-01

# ===========================================
# App settings
# ===========================================
DEBUG=true
VIDEO_OUTPUT_DIR=generated_videos
